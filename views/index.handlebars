  
{{!-- Setup the index.handlebars to have the template that Handlebars can render onto. --}}
<div class="container">

           <div></div>
<div class="jumbotron text-center">
  <h1 class="display-4">Eat Da Burger</h1> 
<img style="margin-bottom: 5px:" src="../assets/images/cartoon-hamburger.png" alt="Burger Giphy">
  
   <form class="create-form">
                <div class="form-group">
                    <label for="newburger">New Burger:</label>
                    <input type="text" id="newburger" name="burger">
                    {{!-- Create a button in index.handlebars that will submit the user input into the database. --}}
                    <button type="submit" class="btn btn-info" id="addburger"></button>
                    </form>
                    </div> 

            </form>
        </panel>
    </div><!-- /jumbotron -->

    <div class="row">
        <!-- Undevoured Burgers -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="lefthead"><strong>New Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                            {{#unless devoured}}
                                <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                                <button type="button" class="eatburger btn btn-info" id ="eatbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"></span></button>
                                <hr>
                            {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <!-- Devoured Burgers -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="righthead"><strong>Devour Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                            {{#if devoured}}
                                <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                                <button type="button" class="devourburger btn btn-info" id ="devourbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"></button>
                                <hr>
                            {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div><!-- /row -->

</div><!-- /container -->